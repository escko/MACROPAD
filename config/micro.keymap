    MEDIA {
    bindings = <
    &none &kp LC(LA(LS(Z))) &kp C_VOL_DN &kp C_VOL_UP 
    &none &none &none &kp LC(LA(LS(P))) &mt5 C_MUTE C_PLAY_PAUSE
    &kp LC(LA(LS(V)))  &kp LC(LA(LS(C))) &mt4 LC(LA(LS(W))) LC(LA(LS(X)))>;    
    sensor-bindings = <&rot_kp LEFT RIGHT>; };
            
