    BLUE {
    bindings = <
    &bt BT_SEL 0 &rgb_ug RGB_BRI &rgb_ug RGB_SAI &rgb_ug RGB_EFF
    &bt BT_SEL 1 &rgb_ug RGB_BRD &rgb_ug RGB_SAD &bt BT_CLR &ext_power EP_TOG    
    &none &none &out OUT_TOG>;    
    sensor-bindings = <&rgb_encoder>; };
