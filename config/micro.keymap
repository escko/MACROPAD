    MEDIA {
    bindings = <
    &none &kp LC(LA(LS(P))) &mt5 LC(LS(DOWN)) LC(LS(UP)) &kp LC(LA(LS(Z))) 
    &none &none &none &none &lt 9 C_PLAY_PAUSE
    &kp LC(LA(LS(V)))  &kp LC(LA(LS(C))) &mt4 LC(LA(LS(W))) LC(LA(LS(X)))>;    
