    //  | SW1 - 0 | SW2 -  1 | SW3 - 2 | SW4 - 3 |
    //  | SW5 - 4 | SW6 -  5 | SW7 - 6 | SW8 - 7 | SW9 - 8 |
    //            | SW10 - 9 | SW11-10 | SW12-11 |
 keymap {
    compatible = "zmk,keymap";
    KRITA {
    bindings = <
    &mt2 LSHFT Q &W_WPASTE &E_CUT &R_RCOPY
    &lt MEDIA A &kp S &kp D &mt3 LA(LG(B)) B &mt LGUI C 
    &mt2 LCTRL N1 &mt2 LSHFT T &mt1 LALT X>;   
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    ARTSTUDIO {
    bindings = <     
    &mt2 LSHFT Q &W_WPASTE &E_CUT &R_RCOPY        
    &lt MEDIA A &kp S &kp D &mt3 LA(LG(B)) B &mt LALT C   
    &mt2 LCTRL N1 &mt2 LSHFT T &mt1 LGUI X>;       
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    INFINITE {
    bindings = <     
    &mt2 LSHFT P &K_KPASTE &E_CUT &B_BCOPY        
    &lt MEDIA W &kp G &mt5 LG(U) LG(B) &kp LS(B) &mt LALT C  
    &kp BACKSLASH &mt2 LSHFT SLASH &mt1 LGUI T>;       
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    FRESCO {
    bindings = <
    &mt2 LSHFT B &H_HPASTE &E_CUT &P_PCOPY          
    &lt MEDIA W &kp V &kp G &kp LS(F) &mt2 LALT I     
    &mt5 LG(LS(BACKSPACE)) LG(L) &mt2 LSHFT LG(COMMA) &mt1 LGUI LG(T)>;    
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    LAYERS {     
    bindings = <
    &none &none &mt5 LS(LG(I)) LG(D) &mt5 ESCAPE ENTER  
    &none &kp COMMA &kp PERIOD &mt5 LG(U) LG(B) &mt3 LCMD LS(N)                       
    &mt5 LS(LG(G)) LG(G) &mt5 LA(LG(M)) LA(LG(C)) &mt3 LALT LS(M)>;
    sensor-bindings = <&rot_kp LS(LG(LBKT)) LS(LG(RBKT))>; };

    VIEW {
    bindings = <
    &none &none &none &none
    &none &none &none &kp TAB &mt0 SPACE LG(N0)
    &mt4 LCTRL LS(V) &kp LS(H) &mt4 LS(LG(N0)) H>;
    sensor-bindings = <&rot_scroll SCRL_UP SCRL_DOWN>; };

    ROTATE {
    bindings = <
    &none &none &none &none
    &none &none &none &kp LA(LG(N0)) &mt0 SPACE LG(N0)
    &kp LS(EQUAL) &kp LC(EQUAL) &mt4 H LG(EQUAL)>;
    sensor-bindings = <&rot_kp LG(MINUS) LS(LG(SEMICOLON))>; };

