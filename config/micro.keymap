    //  | SW1 - 0 | SW2 -  1 | SW3 - 2 | SW4 - 3 |
    //  | SW5 - 4 | SW6 -  5 | SW7 - 6 | SW8 - 7 | SW9 - 8 |
    //            | SW10 - 9 | SW11-10 | SW12-11 |
 keymap {
    compatible = "zmk,keymap";
    KRITA {
    bindings = <
    &mt LSHFT Q &W_PASTE &E_CUT &R_COPY
    &mt LCTRL A &kp S &kp D &mt5 LA(LG(B)) B &mt LCMD C 
    &mt5 LG(N1) N1 &mt1 LSHFT T &mt1 LALT X>;   
    sensor-bindings = <&rot_kp  LBKT RBKT>; };

    ARTSTUDIO {
    bindings = <     
    &mt LSHFT Q &kp W &kp E &mt LC(RALT) R        
    &mt LCTRL A &kp S &kp D &mt4 LA(LG(B)) B &mt RALT C   
    &mt5 LG(N1) N1 &mt1 LSHFT T &mt1 RCMD X>;       
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    INFINITE {
    bindings = <     
    &mt LSHFT P &kp K &kp E &mt 0 B        
    &mt LCTRL W &kp G &mt5 LG(U) LG(B) &kp LS(B) &mt RALT C  
    &kp BACKSLASH &mt1 LSHFT SLASH &mt1 RCMD T>;       
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    FRESCO {
    bindings = <
    &mt LSHFT B &mt5 H V &kp E &mt3 LSHFT P          
    &mt LCTRL W &kp LG(T) &kp L &kp G &mt3 RALT LS(F)     
    &kp LG(LS(BACKSPACE)) &mt3 LSHFT LG(COMMA) &mt3 RCMD I>;    
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    LAYERS {     
    bindings = <
    &none &none &mt5 LS(LG(I)) LG(D) &mt5 ESCAPE ENTER  
    &none &kp COMMA &kp PERIOD &mt5 LG(U) LG(B) &mt3 LCMD LS(N)                       
    &mt5 LS(LG(G)) LG(G) &mt5 LA(LG(M)) LA(LG(C)) &mt3 LALT LS(M)>;
    sensor-bindings = <&rot_kp LS(LG(LBKT)) LS(LG(RBKT))>; };

    VIEW {
    bindings = <
    &none &none &none &none
    &none &none &none &kp TAB &mt0 SPACE LG(N0)
    &mt4 LCTRL LA(H) &kp LS(H) &mt4 LS(LG(N0)) H>;
    sensor-bindings = <&rot_scroll SCRL_UP SCRL_DOWN>; };

    ROTATE {
    bindings = <
    &none &none &none &none
    &none &none &none &kp LA(LG(N0)) &mt0 SPACE LG(N0)
