    // | SW5 - 4 | SW6 -  5 | SW7 - 6 | SW8 - 7 | SW9 - 8 |
    //           | SW10 - 9 | SW11-10 | SW12-11 |
 keymap {
    compatible = "zmk,keymap";
    ARTSTUDIO {
    bindings = <
    &mt0 SPACE Q &kp W &mt U E &mt LC(RALT) R
    &lt MEDIA A &kp D &kp LG(F) &mt5 LS(LG(B)) LG(B) &mt LALT C 
    &mt2 LCTRL Z &mt1 LSHFT V &mt LGUI X>;   
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    KRITA {
    bindings = <
    &kp Q &kp W &mt U E &mt LSHFT R
    &lt MEDIA A &kp D &kp LG(F) &mt5 LS(LG(B)) LG(B) &mt LGUI C 
    &mt2 LCTRL Z &mt1 LSHFT V &mt LALT X>;   
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    INFINITE {
    bindings = <     
    &kp LS(B) &kp K &E_CMDZ &mt O B       
    &lt MEDIA M &kp W &kp F &mt5 LG(U) LG(B) &mt LALT C  
    &mt5 BACKSLASH SLASH &mt1 LSHFT T &mt LGUI V>;       
    sensor-bindings = <&rot_kp LBKT RBKT>; };

    LAYERS {     
    bindings = <
    &none &none &none &mt5 LG(M) N  
    &none &none &kp LS(LG(LA(Z))) &mt5 LG(U) LG(B) &mt3 ESCAPE ENTER                      
    &mt5 LA(Z) LA(X) &kp LS(LG(I)) &kp LG(D)>;
    sensor-bindings = <&rot_kp LS(LG(LBKT)) LS(LG(RBKT))>; };

    ROTATE {
    bindings = <
